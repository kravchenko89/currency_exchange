# .coveragerc to control coverage.py
[run]
branch = True
omit = src/manage.py,
       */migrations/*,
       */__init__.py,
       */tests*.py,
       src/currency_exchange/settings_local.py
       src/currency_exchange/settings.py
       src/currency_exchange/settings_tests.py
       src/currency_exchange/settings.py
       src/currency_exchange/wsgi.py

[report]
precision = 4
exclude_lines =
    pragma: no cover
    def __repr__
    def __str__


[html]
directory = static_content/media/coverage